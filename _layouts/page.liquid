---
layout: base.liquid
---

<section class="py-5 bg-dark text-white">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h1 class="display-4 fw-bold mb-4">{{ title }}</h1>
        {% if subtitle %}
        <p class="lead fs-4 mb-0">{{ subtitle }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container py-4">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="content">
          {{ content }}
        </div>
      </div>
    </div>
  </div>
</section>

{% if includeCallToAction != false %}
<section class="py-5 bg-light">
  <div class="container py-4">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h2 class="fw-bold mb-4">Let's Connect</h2>
        <p class="lead mb-4">Interested in working together or just want to say hello?</p>
        <a href="/contact/" class="btn btn-dark rounded-pill px-5">Contact Me</a>
      </div>
    </div>
  </div>
</section>
{% endif %}
