<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | default: site.title }}</title>
    <meta name="description" content="{{ description | default: site.defaultDescription }}">
    <link rel="canonical" href="{{ site.url }}{{ page.url | url }}">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ site.url }}{{ page.url | url }}">
    <meta property="og:title" content="{{ title | default: site.title }}">
    <meta property="og:description" content="{{ description | default: site.defaultDescription }}">
    <!-- <meta property="og:image" content="{{ site.url }}/assets/images/og-image.jpg"> Ensure you have an image here -->

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ site.url }}{{ page.url | url }}">
    <meta property="twitter:title" content="{{ title | default: site.title }}">
    <meta property="twitter:description" content="{{ description | default: site.defaultDescription }}">
    <!-- <meta property="twitter:image" content="{{ site.url }}/assets/images/twitter-card-image.jpg"> Ensure you have an image here -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ '/assets/css/style.css' | url }}">
</head>
<body class="bg-body-tertiary">
    <a class="visually-hidden-focusable" href="#main-content">Skip to main content</a>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Main navigation">
            <div class="container">
                <a class="navbar-brand" href="/">Hashim Warren</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/portfolio">Portfolio</a></li>
                        <li class="nav-item"><a class="nav-link" href="/speaking">Speaking</a></li>
                        <li class="nav-item"><a class="nav-link" href="/blog">Blog</a></li>
                        <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                        <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main id="main-content" class="container mt-4">
        {{ content }}
    </main>

    <footer class="footer text-center mt-5 py-3 bg-light">
        <div class="container">
            <p class="mb-0 text-dark">&copy; <span id="site-year">{{ site.currentYear }}</span> Hashim Warren</p>
            <ul class="nav justify-content-center">
                <li class="nav-item"><a class="nav-link px-2 text-secondary" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link px-2 text-secondary" href="/portfolio">Portfolio</a></li>
                <li class="nav-item"><a class="nav-link px-2 text-secondary" href="/speaking">Speaking</a></li>
                <li class="nav-item"><a class="nav-link px-2 text-secondary" href="/blog">Blog</a></li>
                <li class="nav-item"><a class="nav-link px-2 text-secondary" href="/about">About</a></li>
                <li class="nav-item"><a class="nav-link px-2 text-secondary" href="/contact">Contact</a></li>
            </ul>
            <!-- Placeholder for social media icons -->
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
      // Fallback to ensure the year is always displayed
      document.addEventListener('DOMContentLoaded', function() {
        var yearEl = document.getElementById('site-year');
        if(yearEl) {
          yearEl.textContent = new Date().getFullYear();
        }
      });
    </script>
</body>
</html>
