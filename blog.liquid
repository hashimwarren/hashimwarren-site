---
layout: base.liquid
title: Blog
permalink: /blog/index.html
eleventyImport:
  collections: ["posts"]
---

<div class="container mt-4">
  <header class="py-5 text-center">
    <h1 class="fw-light">Latest Insights</h1>
    <p class="lead text-muted">Thoughts and updates on marketing strategy and local business growth.</p>
  </header>

  <section class="py-3">
    <div class="row g-4">
      {%- if collections.posts and collections.posts.length > 0 -%}
        {%- for post in collections.posts | reverse -%}
          <div class="col-md-4">
            <div class="card h-100">
              {% if post.data.image %}
                <img src="{{ post.data.image }}" class="card-img-top card-img-top-fixed-height" alt="{{ post.data.imageAlt | default: 'Blog post image' }}">
              {% else %}
                <img src="https://placehold.co/600x400.png?text={{ post.data.title | default: 'Blog Post Image' | replace: ' ', '+' }}" class="card-img-top card-img-top-fixed-height" alt="Placeholder for {{ post.data.title }}">
              {% endif %}
              <div class="card-body text-center">
                <p class="text-muted text-uppercase small mb-2">{{ post.date | date: "%B %d, %Y" }}</p>
                <h5 class="card-title text-uppercase">{{ post.data.title | default: "Blog Post Title" }}</h5>
                {% if post.data.summary %}
                  <p class="card-text text-start">{{ post.data.summary }}</p>
                {% endif %}
                <a href="{{ post.url | url }}" class="btn btn-sm btn-outline-secondary">Read More</a>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- else -%}
        <div class="col">
          <p class="text-center text-muted">Blog posts will be listed here soon.</p>
          <!-- Placeholder cards if no collection exists or is empty -->
          <div class="row g-4">
            {% for i in (1..3) %}
            <div class="col-md-4">
              <div class="card h-100">
                <img src="https://placehold.co/600x400.png?text=Blog+Post+{{ i }}" class="card-img-top card-img-top-fixed-height" alt="Placeholder Blog Post Image {{ i }}">
                <div class="card-body text-center">
                  <p class="text-muted text-uppercase small mb-2">MAY {{ 12 | minus: i }}, 2025</p>
                  <h5 class="card-title text-uppercase">Blog Post Title {{ i }}</h5>
                  <p class="card-text text-start">This is a summary of the blog post, providing a natural lead-in to the full content.</p>
                  <a href="#" class="btn btn-sm btn-outline-secondary">Read More</a>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      {%- endif -%}
    </div>
  </section>
</div>
