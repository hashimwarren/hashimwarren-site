<!-- Featured Blog Posts -->
{% if collections.posts and collections.posts.size > 0 %}
<section class="py-5 bg-white">
  <div class="container py-5">
    <div class="row mb-5">
      <div class="col-lg-6">
        <span class="badge bg-dark px-3 py-2 rounded-pill mb-3">Blog</span>
        <h2 class="display-6 fw-bold">Latest Insights</h2>
      </div>
      <div class="col-lg-6 text-lg-end d-flex align-items-center justify-content-lg-end">
        <a href="/blog/" class="btn btn-outline-dark rounded-pill px-4">View All Posts</a>
      </div>
    </div>
    <div class="row g-5">
      {%- for post in collections.posts | reverse | limit:3 -%}
      <div class="col-md-4">
        <div class="bg-light rounded-4 p-3 h-100 shadow-sm border-0">
          {% if post.data.featuredImage %}
          <img src="{{ post.data.featuredImage }}" class="card-img-top rounded-3" style="height: 200px; object-fit: cover;" alt="{{ post.data.imageAlt | default: 'Blog post image' }}">
          {% else %}
          <img src="https://placehold.co/600x400.png?text={{post.data.title | replace: ' ', '+'}}" class="card-img-top rounded-3" style="height: 200px; object-fit: cover;" alt="Placeholder image for {{post.data.title}}">
          {% endif %}
          <div class="p-3">
            {% if post.data.date %}<div class="d-flex align-items-center mb-3"><span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">{{ post.date | date: "%B %d, %Y" }}</span></div>{% endif %}
            <h5 class="fw-bold">{{ post.data.title }}</h5>
            {% if post.data.summary %}<p class="text-secondary">{{ post.data.summary }}</p>{% endif %}
            <a href="{{ post.url | url }}" class="btn btn-link text-dark p-0 text-decoration-none fw-bold">Read More â†’</a>
          </div>
        </div>
      </div>
      {%- endfor -%}
    </div>
  </div>
</section>
{% endif %}

